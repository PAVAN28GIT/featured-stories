<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-cyan-100 font-poppins">

    <!-- Include the Navbar -->
    <div class="relative z-20">
        <%- include('partials/nav') %>
    </div>

    <div class="flex flex-col lg:flex-row items-center justify-center min-h-screen bg-cyan-100">

        <!-- Left Section: Image & Message -->
        <div class="image lg:flex items-center justify-center relative hidden lg:block bg-center bg-cover lg:w-1/2 h-64 lg:h-screen"
            style="background-image: url('https://w.wallhaven.cc/full/3l/wallhaven-3lepy9.jpg');">
            <div class="absolute inset-0 h-full" style="background: linear-gradient(to right, #313234, transparent);"></div>
            <div class="message relative leading-tight font-extrabold px-4 md:px-10 lg:px-20 xl:px-32 py-10 z-10 text-4xl md:text-6xl lg:text-7xl xl:text-8xl text-white">
                Sign up to share your stories with us.
            </div>
        </div>

        <!-- Right Section: Form -->
        <div class="form w-full lg:w-1/2 px-8 py-10 mt-12 lg:mt-0 lg:py-16">

            <% if (message) { %>
                <div class="absolute top-0 left-1/2 transform -translate-x-1/2 bg-red-200 text-black font-bold p-2 rounded-md shadow-lg z-90 opacity-100 transition-opacity duration-1000" id="error-message">
                    <%= message %>
                </div>
            <% } %>

            <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-6 text-center font-nunito">Create Account</h1>

            <form action="/users/register" method="post" class="flex flex-col items-center">
                <input
                    class="border-2 w-full md:w-3/4 lg:w-2/3 outline-none bg-[#fafafa] border-[#c6c6c6] p-3 px-4 mb-4 rounded-xl"
                    placeholder="Enter your name"
                    type="text"
                    name="name"
                    required
                />
                <input
                    class="border-2 w-full md:w-3/4 lg:w-2/3 outline-none bg-[#fafafa] border-[#c6c6c6] p-3 px-4 mb-4 rounded-xl"
                    placeholder="Enter your email"
                    type="email"
                    name="email"
                    required
                />
                <input
                    class="border-2 w-full md:w-3/4 lg:w-2/3 outline-none bg-[#fafafa] border-[#c6c6c6] p-3 px-4 mb-4 rounded-xl"
                    placeholder="Enter your password"
                    type="password"
                    name="password"
                    required
                />
                <input type="submit" class="btn btn-active btn-neutral h-12 w-full md:w-3/4 lg:w-2/3 bg-black text-white text-lg rounded-xl mb-6 cursor-pointer" value="Create Account" />
            </form>

            <div class="text-center mt-4">
                <span>Already have an account?</span>
                <a href="/users/login" class="font-bold cursor-pointer hover:underline ml-1">Sign in!</a>
            </div>
        </div>

    </div>

    <script>
        // Auto-hide the error message after 1 second
        const errorMessageElement = document.getElementById('error-message');
        if (errorMessageElement) {
            setTimeout(() => {
                errorMessageElement.style.opacity = '0'; // Fade out effect
                setTimeout(() => {
                    errorMessageElement.style.display = 'none'; // Hide after fade out
                }, 1000); // Wait for the fade-out transition
            }, 1000); // Show for 1 second
        }
    </script>
</body>

</html>
